doctype html
html(lang='en')
  include common/head.pug
  +head('Node')
  body
    header
      include common/navbar.pug
      +navbar(user)
      .container
        .row
            .col-md-6.col-md-offset-3
                h1.display-4.m-b-2 Sign Up
                form(method='POST' action='/signup')
                    div.form-group
                        label(for='email') Email
                        input.form-control(type='email' id='email' placeholder='email' name='email', value=formData.email, required)
                        if(errors && errors.email)
                            p.small.text-danger #{errors.email}
                    div.form-group
                        label(for='email') Username
                        input.form-control(type='text' id='username' placeholder='username' name='username', value=formData.username, required)
                        if(errors && errors.username)
                            p.small.text-danger #{errors.username}
                    div.form-group
                        label(for='password') Password
                        input.form-control(type='password' id='password' placeholder='password' name='password', required)
                        if(errors && errors.password)
                            p.small.text-danger #{errors.password}
                    button.btn.btn-primary(type='submit') Register 
    include common/footer.pug
    +footer()